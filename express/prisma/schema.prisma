generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  password  String
  sewas     Sewa[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String
  barangs Barang[]
}

model Barang {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  pricePerDay Int
  stock       Int      @default(1)
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  sewas       Sewa[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sewa {
  id         Int        @id @default(autoincrement())
  userId     Int
  barangId   Int
  startDate  DateTime
  endDate    DateTime
  totalPrice Int
  status     sewaStatus @default(PENDING)
  user       User       @relation(fields: [userId], references: [id])
  barang     Barang     @relation(fields: [barangId], references: [id])
  payment    Payment?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Payment {
  id     Int      @id @default(autoincrement())
  sewaId Int      @unique
  amount Int
  method String
  status String
  sewa   Sewa     @relation(fields: [sewaId], references: [id])
  paidAt DateTime @default(now())
}

enum sewaStatus {
  PENDING
  PAID
  ONGOING
  FINISHED
  CANCELLED
}
