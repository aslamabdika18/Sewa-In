  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo \"No build step required for Node.js (CommonJS)\"",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "start:prod": "pm2 start src/server.js --name sewa-in-api",
    "stop:prod": "pm2 stop sewa-in-api",
    "restart:prod": "pm2 restart sewa-in-api",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:integration": "jest --testPathPattern=routes --forceExit",
    "test:unit": "jest --testPathPattern=modules --forceExit",
    "gen:docs": "node scripts/generate-swagger.js",
    "setup:admin": "node scripts/createAdminUser.js",
    "validate:env": "node scripts/validateEnv.js"
  },
  "dependencies": {
